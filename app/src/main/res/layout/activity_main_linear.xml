<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivityLinear">

    <Button
        android:id="@+id/buttonLinear"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="fnChangeOrientation"
        android:text="Change Orientation" />

    <TextView
        android:id="@+id/textViewLinear"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="This is horizontal linear Layout" />

    <ImageView
        android:id="@+id/imageViewLinear"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher" />

</android.widget.LinearLayout>